#!/usr/bin/env ruby
# encoding: UTF-8

$:.unshift(File.join(File.expand_path(File.dirname(__FILE__)), '..', 'lib'))

require 'terminal'

def help
  puts <<-usage
Usage:
  $ cat output.text | terminal
  $ terminal output.text

Help:
  $ terminal -h
  $ terminal --help

Version:
  $ terminal -v
  $ terminal --version

Preview in the browser:
  $ terminal --preview

See https://buildbox.github.io/terminal for more information.
  usage
end

def version
  puts "terminal v#{Terminal::VERSION}"
end

preview = ARGV.delete('--preview')

if ($stdin.tty? && ARGV.empty?) || ARGV.delete('-h') || ARGV.delete('--help')
  help
elsif ARGV.delete('-v') || ARGV.delete('--version')
  version
else
  require 'tempfile'
  raw = ARGF.read
  tempfile = Tempfile.new(['terminalraw', '.ansi'])
  tempfile.write(raw)
  tempfile.close

  system "go build cmd/ansi2html/ansi2html.go"
  rendered = `./ansi2html #{tempfile.path}`

  if preview

    tempfile = Tempfile.new([ 'preview', '.html' ])
    tempfile.write(Terminal::Preview.new(raw, rendered).render)
    tempfile.close

    exec %{open "#{tempfile.path}"}
  else
    puts rendered
  end
end
